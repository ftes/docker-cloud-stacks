meteor:
 image: ulexus/meteor
 environment:
  - REPO=$REPO
  - ROOT_URL=https://$DOMAIN
  - MONGO_URL=mongodb://mongo/meteor
  - MONGO_OPLOG_URL=mongodb://admin:$PASSWORD@mongo/local?authSource=admin
  - LETSENCRYPT_EMAIL=$EMAIL
  - LETSENCRYPT_HOST=$DOMAIN
  - VIRTUAL_HOST=$DOMAIN
 links:
  - mongo

mongo:
 image: ftes/mongodb
